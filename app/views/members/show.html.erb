<p>
  <strong>Id:</strong>
  <%= @member.id %>
</p>
<p>
  <strong>Name:</strong>
  <%= @member.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @member.email %>
</p>

<p>
  <strong>Role:</strong>
  <%= @member.role.name.capitalize! %>
</p>

<p>
  <strong>Sign in count:</strong>
  <%= @member.sign_in_count %>
</p>


<p>
  <strong>Created at:</strong>
  <%= @member.created_at.strftime('%a,%b %d,%Y at %H:%M:%S %Z') %>
</p>


<p>
  <strong>Updated at:</strong>
  <%= @member.updated_at.strftime('%a,%b %d,%Y at %H:%M:%S %Z') %>
</p>

<% if current_user.role.name=='admin' %>
<%= link_to 'Edit', edit_member_path(@member.id) %> |
<% end %>
<%= link_to 'Back', members_path %>

