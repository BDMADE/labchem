<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order total</th>
      <th>Date received</th>
      <th>Status</th>
      <th>Date shipped</th>
      <th>Shipment method</th>
      <th>Shipment cost</th>
      <th>Tax</th>
      <th>Notes</th>
      <th>Total</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_total %></td>
        <td><%= order.date_received %></td>
        <td><%= order.status %></td>
        <td><%= order.date_shipped %></td>
        <td><%= order.shipment_method %></td>
        <td><%= order.shipment_cost %></td>
        <td><%= order.tax %></td>
        <td><%= order.notes %></td>
        <td><%= order.total %></td>
        <td><%= order.customer %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

